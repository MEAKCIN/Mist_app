<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/homeTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_home_fragment"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/homeEmotionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Current Emotion: Neutral"
        app:layout_constraintTop_toBottomOf="@id/homeTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/labelSprayPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slider_label_spray_each"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/homeEmotionTextView"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/valueSprayPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/labelSprayPeriod"
        app:layout_constraintTop_toTopOf="@id/labelSprayPeriod"
        app:layout_constraintBottom_toBottomOf="@id/labelSprayPeriod"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSprayPeriod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="1"
        android:valueTo="30"
        android:stepSize="1"
        android:value="10"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelSprayPeriod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/labelSprayLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slider_label_spray_length"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/sliderSprayPeriod"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/valueSprayLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/labelSprayLength"
        app:layout_constraintTop_toTopOf="@id/labelSprayLength"
        app:layout_constraintBottom_toBottomOf="@id/labelSprayLength"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSprayLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="1"
        android:valueTo="59"
        android:stepSize="1"
        android:value="30"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/labelSprayLength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/bigSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On/Off"
        android:textColor="@color/white"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/sliderSprayLength"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>